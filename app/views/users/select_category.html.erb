<%= render "shared/header" %>
<%# 商品一覧 %>
<div class='select-category-contents'>
  <h2 class="subtitle" >
  <% if @user.present?%>
    <%= @user.category.name %>の出品者
  <% else %>
    現在出品しているユーザーはおりません。
  <% end %>
  </h2>
  <ul class='category-user-lists'>
    <% @users.each do |user| %>
      <li class='list'>
        <%= link_to "/users/#{user.id}" do %>
          <div class='topuser-info'> <%# トップページのビューを活用 %>
            <div class='topuser-img-content'>
              <% if user.image.attached? %>
                <%= image_tag user.image ,class:"topuser-box-img" %>
              <% else %>
                <%= image_tag "human-dummy.png" ,class:"topuser-box-img" %>
              <% end %>
            </div>
            <div class='topuser-info-right'>
              <div class='topuser-nickname'>
                <%= user.nickname %>
              </div>
              <div class='topuser-service'>
                出品サービス<%= user.services.length %>件
              </div>
            </div>
          </div>
          <div class='topuser-category'>
            <%= user.category.name %>
          </div> <%# /トップページのビューを活用 %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<%# /商品一覧 %>