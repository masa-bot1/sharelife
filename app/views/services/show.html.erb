<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @service.name %>
    </h2>
    <div class='item-img-content'>
      <%= image_tag @service.image ,class:"item-box-img" %>
        <% if @service.order.present? %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
        <% end %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        ¥ <%= @service.price.to_s( :delimited) %>
      </span>
      <span class="item-postage">
        <%= @service.transportation.name %>
      </span>
    </div>

    <% if user_signed_in? %>
      <% if current_user.id == @service.user_id %>
        <% unless @service.order.present? %>
          <%= link_to '商品の編集', edit_service_path(@service.id), method: :get, class: "item-red-btn" %>
          <p class='or-text'>or</p>
          <%= link_to '削除', service_path(@service.id), method: :delete, class:'item-destroy' %>
        <% end %>
      <% else %>
        <% unless @service.order.present? %>
          <%# 商品が売れていない場合はこちらを表示しましょう %>
          <%= link_to '購入画面に進む', service_orders_path(@service), method: :get ,class:"item-red-btn"%>
          <%# //商品が売れていない場合はこちらを表示しましょう %>
        <% end %>
      <% end %>
    <% end %>

    <div class="item-explain-box">
      <span><%= @service.description %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= link_to @service.user.nickname, "/users/#{@service.user.id}" %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @service.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">交通費の負担</th>
          <td class="detail-value"><%= @service.transportation.name %></td>
        </tr>
        <tr>
          <th class="detail-item">出品者の居住地域</th>
          <td class="detail-value"><%= @service.prefecture.name %></td>
        </tr>
        <tr>
          <th class="detail-item">所要時間の目安</th>
          <td class="detail-value"><%= @service.duration.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
        
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
      <div>
        <h3>いいね件数: <%= @service.likes.count %></h3>
          <% if current_user %>
            <% if current_user.already_liked?(@service) %>
              <%= button_to 'いいねを取り消す', service_like_path(@service), method: :delete %>
            <% else %>
              <%= button_to 'いいね', service_likes_path(@service) %>
            <% end %>
          <% end %>
          <h2>いいねしたユーザー</h2>
          <% @service.liked_users.each do |user| %>
            <li><%= user.nickname %></li>
          <% end %>
        </div>
    </div>
  </div>
  <%# /商品の概要 %>

